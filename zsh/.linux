#!/bin/zsh

# Configs for my VPS
echo 'Linux profile loaded.'

# set default editor
export EDITOR='subl'
export VISUAL="$EDITOR"

# enable ls colors
alias ls="ls --color=auto"

# recursively delete .DS_Store
alias dds="find . -name '*.DS_Store' -type f -ls -delete"

# recursively delete node_modules
alias nodemodules="find . -name "node_modules" -exec rm -rf '{}' +"

# hint for these shortcuts
alias hint="echo; cat $ZSH_SRC_PATH/.hints; echo; echo"
