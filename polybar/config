[colors]
foreground = #292d3e

[bar/arch]
enable-ipc = true
width = 100%
height = 20
fixed-center = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

background = rgba(0, 0, 0, 0)
foreground = ${colors.foreground}

line-size = 0
border-size = 0

padding = 1

module-margin = 1

font = "Roboto Mono:pixelsize=10";5

modules-left = bspwm
modules-center = date
modules-right = alsa battery cpu memory network

dim-value = 1.0

tray-position = right
tray-detached = false
tray-maxsize = 22
tray-padding = 0

dpi = 0

[global/wm]
margin-bottom = 5
margin-top = 5

[settings]
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30

pseudo-transparency = true

[module/alsa]
type = internal/alsa

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

master-mixer = Master
speaker-mixer = Speaker
headphone-mixer = Headphone

headphone-id = 9

format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>

format-volume-background = #D34F57
format-volume-foreground = ${colors.foreground}

format-muted-background = #D34F57
format-muted-foreground = ${colors.foreground}

label-volume = %percentage%%
label-muted = V: []

ramp-volume-0 = V: [=]
ramp-volume-1 = V: [==]
ramp-volume-2 = V: [===]
ramp-volume-3 = V: [====]
ramp-volume-4 = V: [=====]

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-charging = %percentage%%
label-discharging = %percentage%%

animation-charging-0 = B: [#]
animation-charging-1 = B: [##]
animation-charging-2 = B: [###]
animation-charging-3 = B: [####]
animation-charging-4 = B: [#####]
animation-charging-framerate = 1000

ramp-capacity-0 = B: [#]
ramp-capacity-1 = B: [##]
ramp-capacity-2 = B: [###]
ramp-capacity-3 = B: [####]
ramp-capacity-4 = B: [#####]

[module/bspwm]
type = internal/bspwm

label-background = ${colors.foreground}
label-focused-underline = #2375FA
label-separator-foreground = #d0d0d0

[module/cpu]
type = internal/cpu
interval = 1

format = <label> <ramp-load>
label = CPU: %percentage%%

ramp-load-0 = [-]
ramp-load-1 = [--]
ramp-load-2 = [---]
ramp-load-3 = [----]
ramp-load-4 = [-----]

[module/date]
type = internal/date
interval = 60

date = %A %m %d
time = %H:%M

format = <label>
format-background = #69B6AB
format-foreground = ${colors.foreground}

label = %date% %time%

[module/memory]
type = internal/memory
interval = 60

format = <label>
label = RAM: %gb_used%/%gb_total%

[module/network]
type = internal/network
;interface = wlp3s0
interface = enp0s3
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-foreground = ${colors.foreground}
format-connected-background = #DF59C9

format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.foreground}
format-disconnected-background = #DF59C9

label-connected = %ifname% %downspeed% %upspeed%

ramp-signal-0 = [*]
ramp-signal-1 = [**]
ramp-signal-2 = [***]
ramp-signal-3 = [****]
ramp-signal-4 = [*****]
