function kai(){
    conda activate "$1"
}
alias guan="conda deactivate"

# directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# some aliases
alias la="ls -A"
alias ll="ls -Al"
